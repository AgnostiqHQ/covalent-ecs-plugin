{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "ecs:RunTask",
                "ecs:ListTasks",
                "ecs:DescribeTasks"
            ],
            "Resource": "*",
            "Condition": {
                "ArnEquals": {
                    "ecs:cluster": "arn:aws:ecs:us-east-1:[AWS_ACCOUNT_ID]:cluster/covalent-fargate-cluster"
                }
            }
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "ecs:RegisterTaskDefinition",
                "ecr:GetAuthorizationToken"
            ],
            "Resource": "*"
        },
        {
            "Sid": "VisualEditor2",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "ecr:GetDownloadUrlForLayer",
                "s3:ListBucket",
                "ecr:UploadLayerPart",
                "ecr:PutImage",
                "s3:PutObject",
                "s3:GetObject",
                "iam:PassRole",
                "ecr:BatchGetImage",
                "ecr:CompleteLayerUpload",
                "logs:GetLogEvents",
                "ecr:InitiateLayerUpload",
                "ecr:BatchCheckLayerAvailability"
            ],
            "Resource": [
                "arn:aws:ecr:*:[AWS_ACCOUNT_ID]:repository/covalent-fargate-task-images",
                "arn:aws:iam::[AWS_ACCOUNT_ID]:role/CovalentFargateTaskRole",
                "arn:aws:iam::[AWS_ACCOUNT_ID]:role/ecsTaskExecutionRole",
                "arn:aws:logs:*:[AWS_ACCOUNT_ID]:log-group:covalent-fargate-task-logs:log-stream:*",
                "arn:aws:s3:::covalent-fargate-task-resources/*",
                "arn:aws:s3:::covalent-fargate-task-resources"
            ]
        }
    ]
}
